{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}",
                "-framework",
                "GLUT",
                "-framework",
                "OpenGL",
                "-Wno-deprecated"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group":{
                "kind" : "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang"
        }
    ],
    "version": "2.0.0"
}